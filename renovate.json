{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["^tests/.*\\.ya?ml$"],
      "matchStrings": [
        "templates.{\"depName\": \"gruntwork-io/boilerplate\", \"currentValue\": $match($$.\"template-url\", /ref=v([0-9.]+)/).groups[0], \"datasource\": \"github-tags\"}"
      ],
      "datasourceTemplate": "github-tags",
      "autoReplaceStringTemplate": "ref={{newValue}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["custom.jsonata"],
      "additionalBranchPrefix": "{{depType}}-",
      "commitMessageSuffix": "({{depType}})",
      "separateMinorPatch": true
    }
  ]
}