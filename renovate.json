{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["^tests/.*\\.ya?ml$"],
      "matchStrings": [
        "$each(templates, function($tpl, $tplName) { $tpl.\"template-url\" and $contains($tpl.\"template-url\", \"ref=\") ? { \"depName\": \"gruntwork-io/boilerplate\", \"currentValue\": $split($split($tpl.\"template-url\", \"ref=\")[1], \"&\")[0], \"datasource\": \"github-tags\" } : null })"
      ],
      "datasourceTemplate": "github-tags",
      "autoReplaceStringTemplate": "ref={{newValue}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["custom.jsonata"],
      "additionalBranchPrefix": "{{depType}}-",
      "commitMessageSuffix": "({{depType}})",
      "separateMinorPatch": true
    }
  ]
}